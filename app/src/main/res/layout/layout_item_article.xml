<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/iv_home_news_image"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_article_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_home_news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:background="@android:color/transparent"
        android:text="발전소에서 미술관으로 : 공간의 변신"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_home_news_image"
        app:layout_constraintTop_toTopOf="@id/iv_home_news_image" />

    <TextView
        android:id="@+id/tv_home_news_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        android:text="2024.09.04"
        android:textColor="#989BA2"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_home_news_title"
        app:layout_constraintTop_toBottomOf="@id/tv_home_news_title" />

</androidx.constraintlayout.widget.ConstraintLayout>