<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="16dp"
    android:paddingHorizontal="16dp">


    <ImageView
        android:id="@+id/iv_post_image"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:background="@color/gray_150"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_article_image"
        tools:src="@drawable/home_article_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_post_image"
        app:layout_constraintTop_toTopOf="@id/iv_post_image"
        app:layout_constraintBottom_toTopOf="@id/tv_address"
        tools:text="재생공간 이름" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/gray_400"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_post_title"
        app:layout_constraintTop_toTopOf="@id/tv_address"
        app:layout_constraintBottom_toBottomOf="@id/tv_address"
        tools:text="200m" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/gray_800"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_distance"
        app:layout_constraintTop_toBottomOf="@id/tv_post_title"
        app:layout_constraintBottom_toTopOf="@id/ll_type"
        tools:text="서울 서대문구 북아현로 34(북아현동)" />

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_d9d9d9_white_round30"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_distance"
        app:layout_constraintStart_toStartOf="@id/tv_post_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_post_image">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="typeIcon"
            android:src="@drawable/ic_mission"
            app:tint="@color/gray_800" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            tools:text="식당"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>