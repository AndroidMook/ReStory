<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvServiceUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 이용"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivRegisterSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingsItemText="재생공간 등록 요청"
                app:settingsItemIcon="@drawable/ic_arrow_forward"/>

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivServiceInquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingsItemText="서비스 문의"
                app:settingsItemIcon="@drawable/ic_arrow_forward"/>

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivShareService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingsItemText="서비스 공유"
                app:settingsItemIcon="@drawable/ic_share"/>

            <TextView
                android:id="@+id/tvInfoAndAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보 및 공지"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingsItemText="공지사항"
                app:settingsItemIcon="@drawable/ic_arrow_forward"/>

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:settingsItemText="이용 약관 및 정책"
                app:settingsItemIcon="@drawable/ic_arrow_forward"/>

            <TextView
                android:id="@+id/tvVersionInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버전 정보"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvVersionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앱버전 v 2.0.0"
                android:textColor="#888888"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>