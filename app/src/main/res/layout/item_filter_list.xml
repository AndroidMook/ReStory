<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription, UseCompoundDrawables">

    <data>
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:id="@+id/rootLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_d9d9d9_white_round30"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:layout_marginEnd="6dp">

        <ImageView
            android:id="@+id/filterIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/color_b1b1b1"
            android:layout_gravity="center"
            android:layout_marginTop="1.5dp"
            android:src="@drawable/ic_filter_coffee"/>

        <TextView
            android:id="@+id/filterNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="카페"
            android:textColor="@color/color_b1b1b1"
            android:textSize="14sp" />
    </LinearLayout>


</layout>
