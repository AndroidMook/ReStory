<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivNotice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:settingsItemIcon="@drawable/ic_arrow_forward"
                app:settingsItemText="공지사항" />

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivRegisterSpace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sivNotice"
                app:settingsItemIcon="@drawable/ic_arrow_forward"
                app:settingsItemText="재생공간 등록 요청" />

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivServiceInquiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sivRegisterSpace"
                app:settingsItemIcon="@drawable/ic_arrow_forward"
                app:settingsItemText="서비스 문의" />

            <com.cyber.restory.presentation.custom.SettingsItemView
                android:id="@+id/sivShareService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sivServiceInquiry"
                app:settingsItemIcon="@drawable/ic_share"
                app:settingsItemText="서비스 공유" />

            <TextView
                android:id="@+id/tvVersionInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="25dp"
                android:text="버전 정보"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sivShareService" />

            <TextView
                android:id="@+id/tvVersionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:text="현재 버전 v 2.0.0"
                android:textColor="#726B6B"
                app:layout_constraintBottom_toBottomOf="@+id/tvVersionInfoLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvVersionInfoLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>