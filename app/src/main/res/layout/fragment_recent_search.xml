<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_search_history_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="최근 검색어"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_clear_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        android:text="전체삭제"
        app:layout_constraintBottom_toBottomOf="@id/tv_search_history_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_search_history_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_history_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_clear_all"
        tools:itemCount="5"
        tools:listitem="@layout/item_search_history_list" />

    <TextView
        android:id="@+id/tv_search_recommend_tag_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천 검색어"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_search_history_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_recommend_tag_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_search_recommend_tag_label"
        app:layout_constraintTop_toBottomOf="@id/tv_search_recommend_tag_label"
        tools:listitem="@layout/item_recommend_tag_list" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_recent_searches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_clear_all,rv_search_history_list" />

</androidx.constraintlayout.widget.ConstraintLayout>